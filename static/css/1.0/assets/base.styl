***********************/

@import 'includes/colors'

@import 'includes/mixins'

*
  font-family 'Helvetica', 'Verdana', 'Foda-se'
  box-sizing border-box

body
  height 100vh
  position relative
  
  &.whats-on
    background linear-gradient(to top, $startGreen, $endGreen)
  &.whats-off
    background linear-gradient(to top, $startRed, $endRed)

.content-status
  width remify(350px)
  left 50%
  top 50%
  transform translate(-50%, -50%)
  text-align center
  position absolute
  display none
  
  .caption
    text-transform uppercase
    font-size remify(35px)
    font-weight 700
    color $white
    padding-bottom remify(30px)
  .img
    width remify(250px)
  &.showing
    display block
