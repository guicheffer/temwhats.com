/***********************
********* MAIN *********
***********************/

@import 'includes/colors'

@import 'includes/mixins'

*
  font-family 'Helvetica', 'Verdana', 'Foda-se'
  box-sizing border-box

body
  height 100vh
  position relative
  margin 0
  padding 0

  &.whats-on
    background linear-gradient(to top, $startGreen, $endGreen)
  &.whats-off
    background linear-gradient(to top, $startRed, $endRed)


.download-google-play
  background url(/static/images/google-play.png)
  text-indent -9999px !important
  font-size 0
  width remify(160px)
  height remify(50px)
  display block
  position absolute
  top 0
  right 0
  margin remify(10px)
  background-size 100%
  display none
  
  &.showing
    display block

.wrapper
  width remify(350px)
  left 50%
  top 50%
  transform translate(-50%, -50%)
  position absolute
  text-align center

.content-status
  width 100%
  height 100%
  display none

  .caption
    text-transform uppercase
    font-size remify(35px)
    font-weight 700
    color $white
    padding-bottom remify(30px)
  .img
    width remify(250px)
  &.showing
    display block

.share-facebook
  margin-top remify(25px)

@media only screen and (max-width: 768px)
  .download-google-play
    display block
    margin 0 auto
    float none
    position relative
    margin-top remify(20px)
