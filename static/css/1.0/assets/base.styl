***********************/

@import 'includes/colors'

@import 'includes/mixins'

*
  font-family 'Helvetica', 'Verdana', 'Foda-se'
  box-sizing border-box

body
  height 100vh
  position relative
  margin 0
  padding 0

  &.whats-on
    background linear-gradient(to top, $startGreen, $endGreen)
  &.whats-off
    background linear-gradient(to top, $startRed, $endRed)

.content-status
  width remify(350px)
  left 50%
  top 30%
  transform translate(-50%, -50%)
  text-align center
  position absolute
  display none

  .caption
    text-transform uppercase
    font-size remify(35px)
    font-weight 700
    color $white
    padding-bottom remify(30px)
  .img
    width remify(250px)
  &.showing
    display block

.download-google-play
  background url(/static/images/google-play.png)
  text-indent -9999px !important
  font-size 0
  width remify(160px)
  height remify(50px)
  display block
  position absolute
  top 0
  right 0
  margin remify(10px)
  background-size 100%

.twitter-timeline
  left 50%
  bottom 10%
  width 50%
  position absolute
  transform translateX(-50%)
  height remify(370px)
  display none

  iframe
    position relative !important
    height 100% !important
    width 100% !important
  
  &.showing
    display block

@media only screen and (max-width: 768px)
  body
    min-height 1000px
    height 100%
  .twitter-timeline
    position relative
    bottom 0
    width 100%
    height remify(500px)
    top remify(250px)
