@import 'includes/colors'

@import 'includes/mixins'

*
  font-family 'Helvetica', 'Verdana', 'Foda-se'
  box-sizing border-box

body
  height 100vh
  position relative

  &.whats-on
    background linear-gradient(to top, $startGreen, $endGreen)
  &.whats-off
    background linear-gradient(to top, $startRed, $endRed)

.content-status
  width remify(350px)
  left 50%
  top 30%
  transform translate(-50%, -50%)
  text-align center
  position absolute
  display none

  .caption
    text-transform uppercase
    font-size remify(35px)
    font-weight 700
    color $white
    padding-bottom remify(30px)
  .img
    width remify(250px)
  &.showing
    display block

.twitter-timeline
  left 50%
  bottom 10%
  position absolute
  transform translateX(-50%)
  height remify(300px)
  display none

  iframe
    position relative !important
    height 100% !important
  
  &.showing
    display block

@media only screen and (max-width: 768px)
  .twitter-timeline
    width 100%
